                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hard" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_second_sentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/second_sentence" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_second_sentence"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_2nd_sent_1st_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/first" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_1st_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/easy" />

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_1st_learner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/middle" />

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_1st_gdex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hard" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_2nd_sent_2nd_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/second" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_2nd_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/easy" />

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_2nd_learner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/middle" />

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_2nd_gdex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hard" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_2nd_sent_3rd_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/third" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_3rd_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/easy" />

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_3rd_learner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/middle" />

                            <RadioButton
								android:onClick="onSecondRadioButtonClicked"
                                android:id="@+id/rbtn_2nd_sent_3rd_gdex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hard" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_third_sentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/third_sentence" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_third_sentence"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_3rd_sent_1st_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/first" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_1st_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/easy" />

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_1st_learner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/middle" />

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_1st_gdex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hard" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_3rd_sent_2nd_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/second" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_2nd_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/easy" />

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_2nd_learner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/middle" />

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_2nd_gdex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hard" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_3rd_sent_3rd_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/third" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_3rd_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/easy" />

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_3rd_learner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/middle" />

                            <RadioButton
								android:onClick="onThirdRadioButtonClicked"
                                android:id="@+id/rbtn_3rd_sent_3rd_gdex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hard" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_hint_sentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txt_hint_sentence">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_hint_sent_1st_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/first" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
								android:onClick="onHintRadioButtonClicked"
                                android:id="@+id/rbtn_hint_sent_1st_book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/easy" />

                            <RadioButton
								android:onClick="onHintRadioButtonClicked"
                                android:id="@+id/rbtn_hint_sent_1st_learner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/middle" />

                            <RadioButton
								android:onClick="onHintRadioButtonClicked"
                                android:id="@+id/rbtn_hint_sent_1st_gdex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hard" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_hint_sent_2nd_option"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/second" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
								android:onClick="onHintRadioButtonClicked"
                                android:id="@+id/rbtn_hint_sent_2nd_book"
                                android:layout_width="wrap_content"
